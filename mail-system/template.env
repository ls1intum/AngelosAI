# ========================
# Mail Server Configuration
# ========================

# IMAP and SMTP configuration for email retrieval and sending.
IMAP_SERVER=
SMTP_SERVER=
IMAP_PORT=
SMTP_PORT=

# ========================
# Angelos Server Configuration
# ========================

# Base URL of the Angelos application server API.
ANGELOS_URL=

# Shared API key for authentication between the Angelos application server and this service.
ANGELOS_APP_API_KEY=

# ========================
# AI Model Configuration
# ========================

# Enable or disable OpenAI usage.
USE_OPENAI=true

# Enable or disable Azure OpenAI usage.
USE_AZURE=true

# ========================
# OpenAI API Configuration
# ========================

# OpenAI model to be used for email classification.
OPENAI_MODEL=

# API Key for OpenAI access.
OPENAI_API_KEY=

# OpenAI endpoint for API calls.
OPENAI_ENDPOINT=

# OpenAI API version
OPENAI_VERSION=
