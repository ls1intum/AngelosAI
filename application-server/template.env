# ========================
# Database Configuration
# ========================

# Database username and password for PostgreSQL connection.
DB_USERNAME=angelosai
DB_PASSWORD=password123

# ========================
# File Upload Configuration
# ========================

# Directory where uploaded documents are stored.
UPLOAD_DIR=uploads/documents

# ========================
# Email Server Configuration
# ========================

# Email credentials for sending registration mails.
MAIL_USERNAME=mail@mail.de
MAIL_PASSWORD=mailpassword

# System administrator email and password.
ADMIN_MAIL=admin@mail.de
ADMIN_PASSWORD=adminpassword

# ========================
# CORS Configuration
# ========================

# Allowed origins for frontend applications (CORS). 
CHATBOT_ORIGIN=http://localhost:4200
KB_ORIGIN=http://localhost:4400

# ========================
# API URLs
# ========================

# Base URL for the Angelos RAG API.
ANGELOS_URL=http://angelos-app:8000/api

# Base URL for the Eunomia Mail System API.
EUNOMIA_URL=http://eunomia-app:8082/api

# ========================
# Security Configuration
# ========================

# Shared secret keys for authentication between services.
ANGELOS_SECRET=secretkey
EUNOMIA_SECRET=secretkey

# Default login credentials for the chatbot.
ANGELOS_USERNAME=user
ANGELOS_PASSWORD=pw

# JWT Secret Key for authentication.
JWT_SECRET_KEY=32_char_long_secret_key_32_char_long_secret_key
